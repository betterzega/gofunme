<div class="row">
  <div class="col-3"></div>
  <div class="col-6 col-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :department %>
      <%= f.input :team %>
      <%= f.input :started_on %>
      <%= f.input :level %>

      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
