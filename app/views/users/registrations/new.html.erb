<div class="row">
  <div class="col-3"></div>
  <div class="col-6 col-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <div class="row">
        <div class="col-6">
          <%= f.input :first_name, required: false %>
        </div>
        <div class="col-6">
          <%= f.input :last_name, required: false %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.input :department, collection: User::DEPARTMENT_OPTIONS, value_method: :first, label_method: :second, required: false %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :started_on, required: false %>
        </div>
        <div class="col-6">
          <%= f.input :level, required: false %>
        </div>
      </div>

      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
